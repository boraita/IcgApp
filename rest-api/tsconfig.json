{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "noLib": false,
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./"
  },
  "include": ["./**/*"],
  "exclude": ["./node_modules", "./dist/**/*", "./plugins/**/*", "./typings/**/*"]
}
